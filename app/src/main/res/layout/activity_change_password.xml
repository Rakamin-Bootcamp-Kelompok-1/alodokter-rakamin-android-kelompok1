<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/change_password"
            android:textSize="18dp"
            android:textColor="@color/black"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/Toolbar"/>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/ibBack"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="24dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_pointleft"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/tvLabelOldPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/Toolbar"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/label_old_password"
            android:layout_marginTop="10dp"
            android:paddingVertical="5dp"
            android:paddingHorizontal="41dp"/>
        <EditText
            android:id="@+id/tvFormOldPassword"
            android:layout_width="330dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelOldPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/shape_fillable_form"
            android:paddingVertical="5dp"
            android:paddingHorizontal="41dp"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/tvLabelNewPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvFormOldPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/label_new_password"
            android:paddingVertical="5dp"
            android:paddingHorizontal="41dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/tvFormNewPassword"
            android:layout_width="330dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelNewPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingVertical="5dp"
            android:paddingHorizontal="41dp"
            android:background="@drawable/shape_fillable_form"
            android:elevation="10dp"/>

        <TextView
            android:id="@+id/tvLabelConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tvFormNewPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="@string/label_confirm_password"
            android:paddingVertical="5dp"
            android:paddingHorizontal="41dp"
            android:layout_marginTop="10dp"/>
        <EditText
            android:id="@+id/tvFormConfirmPassword"
            android:layout_width="330dp"
            android:layout_height="45dp"
            app:layout_constraintTop_toBottomOf="@id/tvLabelConfirmPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:paddingVertical="5dp"
            android:paddingHorizontal="41dp"
            android:background="@drawable/shape_fillable_form"
            android:elevation="10dp"/>

        <Button
            android:id="@+id/btSaveEdit"
            android:layout_width="330dp"
            android:layout_height="45dp"
            android:text="@string/update_password"
            android:textColor="@color/white"
            android:textSize="18dp"
            app:layout_constraintTop_toBottomOf="@id/tvFormConfirmPassword"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginVertical="25dp"
            android:background="@drawable/shape_button_submit"
            android:elevation="10dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>