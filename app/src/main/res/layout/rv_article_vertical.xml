<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginVertical="18dp"
    android:background="@drawable/shape_article">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tvJudulArtikel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/judul_artikel1"
            android:textStyle="bold"
            android:textSize="18dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tvIsiShortArtikel1"/>
        <TextView
            android:id="@+id/tvIsiShortArtikel1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/isi_short_artikel1"
            app:layout_constraintTop_toBottomOf="@id/tvJudulArtikel1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="5dp"/>
        <ImageView
            android:id="@+id/ivArtikel"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:src="@drawable/ic_gambar_artikel1"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvIsiShortArtikel1"
            android:background="@color/white"
            android:layout_marginTop="5dp"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>