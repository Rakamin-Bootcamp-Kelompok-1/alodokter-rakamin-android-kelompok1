<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/parentDetailArticleLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/artikel_medikuy"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"
            app:layout_constraintBottom_toBottomOf="@id/Toolbar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/Toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/ibBack"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="24dp"
                    android:layout_height="48dp"
                    android:src="@drawable/ic_pointleft"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:contentDescription="@string/img_arrow_back" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/tvJudulArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/padding_20"
            android:paddingHorizontal="@dimen/padding_20"
            android:paddingTop="@dimen/padding_20"
            android:paddingBottom="@dimen/padding_15"
            android:text="@string/judul_artikel1"
            android:textAlignment="textStart"
            android:textSize="@dimen/font_18"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/Toolbar" />

        <ImageView
            android:id="@+id/ivArtikel"
            android:layout_width="wrap_content"
            android:layout_height="210dp"
            android:padding="@dimen/spacing_10"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_20"
            android:scaleType="fitXY"
            android:src="@drawable/ic_gambar_artikel1"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvJudulArtikel"
            android:contentDescription="@string/image_article" />

        <TextView
            android:id="@+id/tvIsiArtikel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_10"
            android:layout_marginEnd="@dimen/spacing_10"
            android:fontFamily="@font/nunito_regular"
            android:justificationMode="inter_word"
            android:paddingHorizontal="@dimen/padding_20"
            android:text="@string/isi_artikel1"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivArtikel" />

        <ImageButton
            android:id="@+id/ibFacebookIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_10"
            android:paddingTop="@dimen/padding_20"
            android:src="@drawable/ic_facebook_icon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvIsiArtikel" />

        <ImageButton
            android:id="@+id/ibTwitterIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_10"
            android:paddingTop="@dimen/padding_20"
            android:src="@drawable/ic_twitter_icon"
            app:layout_constraintStart_toEndOf="@id/ibFacebookIcon"
            app:layout_constraintTop_toBottomOf="@id/tvIsiArtikel" />

        <ImageButton
            android:id="@+id/ibLinkedInIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_10"
            android:paddingTop="@dimen/padding_20"
            android:src="@drawable/ic_linkedin_icon"
            app:layout_constraintStart_toEndOf="@id/ibTwitterIcon"
            app:layout_constraintTop_toBottomOf="@id/tvIsiArtikel" />

        <ImageButton
            android:id="@+id/ibLinkIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingStart="@dimen/padding_20"
            android:paddingEnd="@dimen/padding_10"
            android:paddingTop="@dimen/padding_20"
            android:src="@drawable/ic_link_icon"
            app:layout_constraintStart_toEndOf="@id/ibLinkedInIcon"
            app:layout_constraintTop_toBottomOf="@id/tvIsiArtikel" />

        <ImageView
            android:id="@+id/ivLineBlack"
            android:layout_width="600dp"
            android:layout_height="wrap_content"
            android:paddingVertical="18dp"
            android:src="@drawable/ic_line_black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ibLinkedInIcon" />

        <TextView
            android:id="@+id/tvRecentPost"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_20"
            android:fontFamily="@font/nunito_semi_bold"
            android:text="@string/recent_post"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLineBlack" />

        <TextView
            android:id="@+id/btnSeeAll"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_10"
            android:text="@string/see_all"
            android:textAllCaps="false"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ivLineBlack" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvRecentPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/spacing_20"
            android:orientation="horizontal"
            app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvRecentPost"
            tools:listitem="@layout/item_recent_post" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
